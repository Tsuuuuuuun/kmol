
{
    "model": {
        "type": "graph_convolutional",
        "in_features": 45,
        "out_features": 3,
        "hidden_features": 32,
        "dropout": 0.25,
        "layer_type": "kmol.model.layers.GINConvolution",
        "layers_count": 2,
        "molecule_features": 17,
        "is_residual": 1,
        "norm_layer": "kmol.model.layers.GraphNorm"
    },
    "loader": {
        "type": "csv",
        "input_path": "data/input/adme/ready/ner_llc_human.csv",
        "input_column_names": ["smiles"],
        "target_column_names": ["low", "medium", "high"]
    },
    "splitter": {
        "type": "random",
        "splits": {"train": 0.8, "test": 0.2},
        "seed": 42
    },
    "featurizers": [
        {
            "type": "graph",
            "inputs": ["smiles"],
            "outputs": ["graph"],
            "descriptor_calculator": {"type": "rdkit"}
        }
    ],
    "transformers": [],
    "optimizer": {
        "type": "torch.optim.AdamW",
        "lr": 1e-2,
        "weight_decay": 1e-4
    },
    "criterion": {
        "type": "torch.nn.BCEWithLogitsLoss"
    },
    "scheduler": {
        "type": "torch.optim.lr_scheduler.OneCycleLR",
        "max_lr": 1e-2,
        "epochs": 200,
        "pct_start": 0.3,
        "div_factor": 25,
        "final_div_factor": 1000
    },
    "output_path": "data/logs/server/",
    "checkpoint_path": null,
    "threshold": 0.3864334722359975,
    "cross_validation_folds": 5,

    "train_metrics": [],
    "test_metrics": ["roc_auc", "pr_auc", "accuracy", "precision", "recall", "cohen_kappa"],

    "epochs": 200,
    "batch_size": 64,

    "use_cuda": true,
    "enabled_gpus": [0],

    "cache_location": "data/cache/",
    "clear_cache": false,

    "log_level": "info",
    "log_format": "",
    "log_frequency": 5,

    "observers": {},
    "target_metric": "roc_auc",
    "optuna_trials": 1000
}
